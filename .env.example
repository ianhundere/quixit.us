# Server settings
PORT=8080
JWT_SECRET=your-super-secret-jwt-key-here
GIN_MODE=debug # Options: debug, release

# Development settings
DEV_MODE=true
DEV_BYPASS_TIME_WINDOWS=true
VITE_DEV_BYPASS_TIME_WINDOWS=true
DEV_BYPASS_OAUTH=true # Set to true in development to bypass state validation for cross-domain OAuth

# Host settings
HOST_DOMAIN=dev.quixit.us # Development domain (configured in /etc/hosts)
HOST_PORT=3000 # Frontend port

# JWT durations
JWT_ACCESS_DURATION=15m
JWT_REFRESH_DURATION=168h

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sample_exchange

# Storage settings
STORAGE_PATH=./storage

# Frontend settings
# VITE_API_URL=/api # For production
VITE_API_URL=http://localhost:8080/api # For local development

# OAuth settings
# Configure your OAuth providers and update HOST_DOMAIN and HOST_PORT above
OAUTH_REDIRECT_URL=http://${HOST_DOMAIN}:${HOST_PORT}/auth/callback

# GitHub OAuth
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_GITHUB_REDIRECT_URL=http://${HOST_DOMAIN}:${HOST_PORT}/auth/github/callback

# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URL=http://${HOST_DOMAIN}:${HOST_PORT}/auth/google/callback

# Discord OAuth
OAUTH_DISCORD_CLIENT_ID=your-discord-client-id
OAUTH_DISCORD_CLIENT_SECRET=your-discord-client-secret
OAUTH_DISCORD_REDIRECT_URL=http://${HOST_DOMAIN}:${HOST_PORT}/auth/discord/callback
