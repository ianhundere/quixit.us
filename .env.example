# Server settings
PORT=8080
JWT_SECRET=your-super-secret-jwt-key-here
GIN_MODE=debug # Options: debug, release

# Development settings
DEV_MODE=true
DEV_BYPASS_TIME_WINDOWS=true
DEV_BYPASS_OAUTH=true

# JWT durations
JWT_ACCESS_DURATION=15m
JWT_REFRESH_DURATION=168h

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sample_exchange

# Storage settings
STORAGE_PATH=./storage

# Frontend settings
VITE_API_URL=/api # For production
# VITE_API_URL=http://localhost:8080/api # For local development

# OAuth settings
# Replace 'blah' with dev domain (e.g. dev.quixit.us)
# Add to /etc/hosts:
# 127.0.0.1 blah
OAUTH_REDIRECT_URL=http://blah:3000/auth/callback

# GitHub OAuth
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_GITHUB_REDIRECT_URL=http://blah:3000/auth/github/callback

# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URL=http://blah:3000/auth/google/callback

# Discord OAuth
OAUTH_DISCORD_CLIENT_ID=your-discord-client-id
OAUTH_DISCORD_CLIENT_SECRET=your-discord-client-secret
OAUTH_DISCORD_REDIRECT_URL=http://blah:3000/auth/discord/callback
