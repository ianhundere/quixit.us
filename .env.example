# Server settings
PORT=8080
JWT_SECRET=your-super-secret-jwt-key-here
GIN_MODE=debug # Options: debug, release

# Development settings
DEV_MODE=true
DEV_BYPASS_TIME_WINDOWS=true
DEV_BYPASS_OAUTH=true

# JWT durations
JWT_ACCESS_DURATION=15m
JWT_REFRESH_DURATION=168h

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sample_exchange

# Email settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=test@example.com
SMTP_PASSWORD=test-password-123
SMTP_FROM=test@example.com

# Storage settings
STORAGE_PATH=./storage

# Frontend settings
VITE_API_URL=/api # For production
# VITE_API_URL=http://localhost:8080/api # For local development

# OAuth settings
OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
